<window>
	<defaultcontrol>61</defaultcontrol>
	<include>dialogeffect</include>
	<coordinates>
		<system>1</system>
		<posx>50</posx>
		<posy>25</posy>
	</coordinates>
	<controls>
		<control type="image">
			<posx>-50</posx>
			<posy>-25</posy>
			<width>720</width>
			<height>576</height>
			<texture>black.png</texture>
			<animation effect="fade" time="2000">WindowOpen</animation>
		</control>
		<control type="image">
			<description>background image</description>
			<posx>25</posx>
			<posy>35</posy>
			<width>570</width>
			<height>485</height>
			<texture border="20,10,10,30">dialog-panel.png</texture>
		</control>
		<control type="label" id="4">
			<description>Item Title value</description>
			<posx>20</posx>
			<posy>40</posy>
			<width>600</width>
			<height>30</height>
			<align>center</align>
			<aligny>center</aligny>
			<textcolor>DDced8da</textcolor>
			<label></label>
			<font>special13</font>
		</control>
		<control type="image">
			<posx>40</posx>
			<posy>75</posy>
			<width>550</width>
			<height>2</height>
			<texture>separator.png</texture>
		</control>
		<control type="image">
			<description>item image frame</description>
			<posx>30</posx>
			<posy>80</posy>
			<width>260</width>
			<height>430</height>
			<texture border="10">dialog-panel2.png</texture>
		</control>
		<control type="image" id="6">
			<description>item image</description>
			<posx>45</posx>
			<posy>85</posy>
			<width>240</width>
			<height>395</height>
			<aspectratio>keep</aspectratio>
			<texture></texture>
		</control>
		<control type="textbox" id="5">
			<description>textarea</description>
			<posx>295</posx>
			<posy>150</posy>
			<width>275</width>
			<height>330</height>
			<label>-</label>
			<font>special11</font>
			<align>left</align>
			<textcolor>0xFFFFFFFF</textcolor>
			<pagecontrol>61</pagecontrol>
		</control>

		<!-- SCROLL BAR FOR LIST -->
		<control type="group">
			<visible>Control.isVisible(5)</visible>
			<control type="button">
				<posx>575</posx>
				<posy>150</posy>
				<width>15</width>
				<height>15</height>
				<texturefocus border="2">scrollbar_arrow_up_focus.png</texturefocus>
				<texturenofocus border="2">scrollbar_arrow_up.png</texturenofocus>
				<onclick>PageUp(5)</onclick>
				<visible>Control.IsVisible(5)</visible>
			</control>
			<control type="scrollbar" id="61">
				<posx>575</posx>
				<posy>165</posy>
				<width>15</width>
				<height>310</height>
				<texturesliderbackground border="4">scrollbar_background.png</texturesliderbackground>
				<texturesliderbar border="4">scrollbar_bar.png</texturesliderbar>
				<texturesliderbarfocus border="4">scrollbar_bar_focus.png</texturesliderbarfocus>
				<textureslidernib>scrollbar_nib.png</textureslidernib>
				<textureslidernibfocus>scrollbar_nib.png</textureslidernibfocus>
				<onleft>61</onleft>
				<onright>61</onright>
				<showonepage>true</showonepage>
				<orientation>vertical</orientation>
			</control>
			<control type="button">
				<posx>575</posx>
				<posy>475</posy>
				<width>15</width>
				<height>15</height>
				<texturefocus border="2">scrollbar_arrow_down_focus.png</texturefocus>
				<texturenofocus border="2">scrollbar_arrow_down.png</texturenofocus>
				<visible>Control.IsVisible(5)</visible>
				<onclick>PageDown(5)</onclick>
			</control>
		</control>

		<control type="label" id="20">
			<description>updated label1</description>
			<posx>350</posx>
			<posy>90</posy>
			<width>100</width>
			<height>30</height>
			<align>right</align>
			<aligny>center</aligny>
			<textcolor>DDced8da</textcolor>
			<label>$LOCALIZE[30940]</label>
			<font>special12</font>
		</control>
		<control type="label" id="21">
			<description>updated label2</description>
			<posx>360</posx>
			<posy>90</posy>
			<width>200</width>
			<height>30</height>
			<align>left</align>
			<aligny>center</aligny>
			<textcolor>0xFFFFFFFF</textcolor>
			<label></label>
			<font>special12</font>
		</control>
		<control type="label" id="22">
			<description>author label1</description>
			<posx>350</posx>
			<posy>120</posy>
			<width>200</width>
			<height>25</height>
			<align>right</align>
			<aligny>center</aligny>
			<textcolor>DDced8da</textcolor>
			<label>$LOCALIZE[30941]</label>
			<font>special12</font>
		</control>
		<control type="label" id="23">
			<description>author label2</description>
			<posx>360</posx>
			<posy>120</posy>
			<width>400</width>
			<height>25</height>
			<align>left</align>
			<aligny>center</aligny>
			<textcolor>0xFFFFFFFF</textcolor>
			<label></label>
			<font>special12</font>
		</control>
	</controls>
</window>
